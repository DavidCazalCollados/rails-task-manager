<h1>Add your task</h1>

  <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class:"form-control" %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.label :completed %>
    <%= f.number_field :completed %>
    <%= f.submit %>
  <% end %>
<p><%= link_to "Back to list", tasks_path %></p>
